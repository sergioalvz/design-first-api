  },
  "homepage": "https://github.com/sergioalvz/design-first-api#readme",
  "devDependencies": {
    "@types/hapi": "^17.0.12",
    "@types/inert": "^5.1.0",
    "@types/jest": "^22.2.3",
    "@types/vision": "^5.3.2",
    "jest": "^22.4.3",
    "nodemon": "^1.17.4",
    "prettier": "1.12.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
